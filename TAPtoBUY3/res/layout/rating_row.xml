<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >    
    
    <TextView
        android:id="@+id/ratingBuyerUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        
        android:layout_marginLeft="15dp"
        android:text="Username"
        android:fontFamily="comic sans"
        android:textAppearance="?android:attr/textAppearanceMedium" />

     <RatingBar
         android:id="@+id/ratingGiven"
         style="@style/productRatingBar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/ratingBuyerUN"
         android:layout_marginRight="64dp"
         android:layout_marginTop="11dp"
         android:isIndicator="true"
         android:numStars="5"
         android:rating="0" />

     <Button
         android:id="@+id/bidRow_separator"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="fill_parent"
         android:layout_height="4dp"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/ratingBuyerUN"
         android:background="@drawable/customb2"
         android:clickable="false" />

</RelativeLayout>
