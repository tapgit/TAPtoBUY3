<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/report_ProdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:fontFamily="comic sans"
        android:text="Product"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Button
        android:id="@+id/report_split"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/report_revenue"
        android:background="@drawable/customb2"
        android:clickable="false" />

    <TextView
        android:id="@+id/report_soldQTY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/report_ProdName"
        android:layout_alignBottom="@+id/report_ProdName"
        android:layout_centerHorizontal="true"
        android:text="Sold amount"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/report_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/report_soldQTY"
        android:layout_alignBottom="@+id/report_soldQTY"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:text="Revenue"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
