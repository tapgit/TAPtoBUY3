<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <ImageView
        android:id="@+id/recBou_BoughtProductPic"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginLeft="4dip"
        android:layout_marginTop="4dip"        
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/android" />

    <TextView
        android:id="@+id/recBou_BoughtProdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_alignLeft="@+id/recBou_BoughtSellerID"
        android:layout_alignTop="@+id/recBou_BoughtProductPic"
        android:text="Product Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/recBou_BoughtSellerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/recBou_BoughtPrice"
        android:layout_toRightOf="@+id/recBou_BoughtProductPic"
        android:text="sellerUsername"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/recBou_BoughtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/recBou_BoughtSellerID"
        android:layout_below="@+id/recBou_BoughtProdName"
        android:text="Price + Shipp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/recBou_pruchOrWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/recBou_BoughtSellerID"
        android:layout_below="@+id/recBou_BoughtSellerID"
        android:text="QTY or BidsAmount"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    

</RelativeLayout>
