<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portrait_back" >

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/cartSellectAllB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>       

    <Button
        android:id="@+id/cartSellectAllB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="3dp"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Select All" />

    <Button
        android:id="@+id/cartBuySelectedB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="17sp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/cartSellectAllB"
        android:text="Buy Selected" />

    <Button
        android:id="@+id/cartRemoveSelectedB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"      
        android:layout_marginBottom="3dp"
        android:layout_alignTop="@+id/cartBuySelectedB"
        android:layout_toRightOf="@+id/cartBuySelectedB"
        android:text="Remove Selected" />

</RelativeLayout>