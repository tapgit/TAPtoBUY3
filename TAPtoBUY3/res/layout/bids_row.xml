<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/bidRow_BidderUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:text="Bidder Username"
        android:fontFamily="comic sans"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/bidRow_separator"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bidRow_BidderUsername"        
        android:background="@drawable/customb2"
        android:clickable="false" />

    <TextView
        android:id="@+id/bidRow_BidPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bidRow_BidderUsername"
        android:layout_alignBottom="@+id/bidRow_BidderUsername"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/bidRow_BidderUsername"
        android:fontFamily="comic sans"
        android:text="Bid Price"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
